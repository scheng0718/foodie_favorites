<!-- search bar -->
<div class="container search-bar">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto search-bar-outer">
      <div class="row row-cols-sm-3 search-bar-inner d-flex justify-content-between">
        <form action="/search">
          <h4 class="mb-2">Search:</h4>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="Restaurant or Category"
              aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>

        <form action="/">
          <div class="form-group">
            <h4 class="mb-2">Sort by:</h4>
            <div class="input-group mb-3">
              {{!-- <label class="input-group-text" for="sorting" style="font-size: 1.5rem;  font-weight:bold"></label> --}}
              <select class="form-select" id="sorting">
                <option selected> Sort...</option>
                <option value="asc">A -> Z</option>
                <option value="desc">Z -> A</option>
                <option value="category">Category</option>
                <option value="location">Location</option>
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      {{#if restaurant}}
      <div class="row row-cols-sm-3">
        {{#each restaurant}}
          <div>
            <a href="/restaurant/{{this._id}}" class="text-secondary">
              <div class="card mb-3">
                <img class="card-img-top" src={{this.image}} alt={{this.name}}>
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>
            
                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{this.category}}
                  </div>
            
                  <span class="badge badge-pill badge-danger font-weight-normal">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
              </div>
            </a>
            <div class="d-flex justify-content-end">
              <a class="ms-3 mb-5 btn btn-outline-secondary" href="/restaurant/{{ this._id }}/edit" role="button">Edit</a>
              <a class="ms-3 mb-5 btn btn-outline-secondary" href="/restaurant/{{ this._id }}" role="button">Detail</a>
              <form action="/restaurant/{{ this._id }}/delete" method="POST" style="display: inline;">
                <button class="ms-3 mb-5 btn btn-outline-danger" type="submit">Delete</button>
              </form>
            </div>
            
          </div>  
        {{/each}}
      </div>     
      {{else}}
        <h1> Cannot find the matched restaurant. Please try again! </h1>
      {{/if}} 
    </div>
  </div>
</div>