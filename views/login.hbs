<div class="row my-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Sign in</h1>
      {{> message}}
      <form action="/users/login" method="POST" id="form" novalidate>
        <div class="mb-3">
          <label for="email" class="mb-2">Email address</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{emailInput}}" required>
          <div class="invalid-feedback">required</div>
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required>
          <div class="invalid-feedback">required</div>
        </div>
        <div class="d-grid gap-2 col-3 mx-auto my-4">
          <button type="submit" class="btn btn-success btn-block" id="submit">Sign in</button>
        </div>
        <div class="text-center">
          <div class="line"></div>
          <div class="text">or</div>
          <div class="line"></div>
        </div>
      </form>
      <div class="d-grid gap-2 col-6 mx-auto my-2">
        <a href="/auth/facebook" class="btn btn-outline-primary btn-block d-flex align-items-center position-relative">
          <i class="fa-brands fa-square-facebook fa-lg me-2 position-absolute start-3"></i>
          <span class="w-100 text-center">Continue with Facebook</span>
        </a>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto my-2">
        <a href="/auth/google" class="btn btn-outline-secondary btn-block d-flex align-items-center position-relative">
          <i class="fa-brands fa-google fa-lg me-2 position-absolute start-3"></i>
          <span class="w-100 text-center">Continue with Google</span>
        </a>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto my-2">
        <a href="/auth/apple" class="btn btn-outline-dark btn-block d-flex align-items-center position-relative">
          <i class="fa-brands fa-apple fa-xl me-2 position-absolute start-3"></i>
          <span class="w-100 text-center">Continue with Apple</span>
        </a>
      </div>
      <div class="text-center">
        <p class="lead mt-4">
          No Account? <a href="/users/signup">Sign Up Here</a>
        </p>
      </div>
    </div>
  </div>
</div>