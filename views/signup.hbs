<div class="row my-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Sign Up</h1>
      {{> message}}
      <form action="/users/signup" method="POST">
        <div class="mb-3">
          <label for="name" class="mb-2">Name</label>
          <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{email}}">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{password}}">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="Confirm Password" value="{{confirmPassword}}">
        </div>
        <div class="d-grid gap-2 col-3 mx-auto my-4">
          <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
        </div>
      </form>
      <p class="lead text-center">
        Have An Account? <a href="/users/login">Sign in</a>
      </p>
      <div class="text-center">
        <div class="line"></div>
        <div class="text">or</div>
        <div class="line"></div>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto my-2">
        <a href="/auth/facebook" class="btn btn-outline-primary btn-block d-flex align-items-center position-relative">
          <i class="fa-brands fa-square-facebook fa-lg me-2 position-absolute start-3"></i>
          <span class="w-100 text-center">Continue with Facebook</span>
        </a>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto my-2">
        <a href="/auth/google" class="btn btn-outline-secondary btn-block d-flex align-items-center position-relative">
          <i class="fa-brands fa-google fa-lg me-2 position-absolute start-3"></i>
          <span class="w-100 text-center">Continue with Google</span>
        </a>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto my-2">
        <a href="/auth/apple" class="btn btn-outline-dark btn-block d-flex align-items-center position-relative">
          <i class="fa-brands fa-apple fa-xl me-2 position-absolute start-3"></i>
          <span class="w-100 text-center">Continue with Apple</span>
        </a>
      </div>
    </div>
  </div>
</div>